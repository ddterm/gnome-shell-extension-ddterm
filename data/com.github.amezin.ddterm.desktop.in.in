[Desktop Entry]
Type=Application
Name=ddterm
# Translators: Search terms to find this application. Do NOT translate or localize the semicolons! The list MUST also end with a semicolon!
Keywords=shell;prompt;command;commandline;cmd;run;terminal;
Comment=Another drop down terminal extension for GNOME Shell
Icon=@ICON@
TryExec=@LAUNCHER@
Exec="@LAUNCHER@"
Categories=GNOME;GTK;System;TerminalEmulator;
StartupWMClass=Com.github.amezin.ddterm
StartupNotify=true
DBusActivatable=true
Actions=toggle;preferences;
OnlyShowIn=GNOME;
X-ExecArg=--

[Desktop Action toggle]
Name=Toggle
Exec=gapplication action com.github.amezin.ddterm toggle

[Desktop Action preferences]
Name=Preferencesâ€¦
Exec=gapplication action com.github.amezin.ddterm preferences
