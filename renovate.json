{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "config:js-app",
    "security:minimumReleaseAgeNpm"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "pip-compile": {
    "managerFilePatterns": [
      "requirements/*.txt"
    ]
  },
  "pip_requirements": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "*.sh",
        ".github/{actions/*,workflows}/*.{yml,yaml}",
        "subprojects/*.wrap"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(\\s+(lookupName|packageName)=(?<packageName>\\S+))?(\\s+versioning=(?<versioning>\\S+))?\\n\\s*\\w+\\s*[:=]\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?(\\s|$)",
        "#\\s*renovate-digest:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s+currentValue=(?<currentValue>\\S+)(\\s+(lookupName|packageName)=(?<packageName>\\S+))?(\\s+versioning=(?<versioning>\\S+))?\\n\\s*\\w+\\s*[:=]\\s*[\"']?(?<currentDigest>[^\\s\"']+)[\"']?(\\s|$)"
      ]
    }
  ],
  "packageRules": [
    {
      "extends": [
        "helpers:pinGitHubActionDigests"
      ],
      "versioning": "npm"
    },
    {
      "matchPackageNames": [
        "ghcr.io/archlinux/archlinux"
      ],
      "versionCompatibility": "^(?<compatibility>.*)-(?<version>[^-]*)$",
      "branchTopic": "{{{depNameSanitized}}}",
      "automerge": true,
      "extends": [
        "schedule:automergeWeekly"
      ],
      "maxMajorIncrement": 0
    },
    {
      "matchPackageNames": [
        "ghcr.io/ddterm/gnome-shell-image/**"
      ],
      "groupName": "GNOME Shell Container Images"
    },
    {
      "matchPackageNames": [
        "ghcr.io/ddterm/**"
      ],
      "pinDigests": false,
      "automerge": true
    }
  ]
}
