root: true

extends:
  - @common_eslintrc@

rules:
  comma-dangle: off

overrides:
  - files:
      - extension.js
      - prefs.js
      - ddterm/app/fakeext/misc/extensionUtils.js
      - ddterm/pref/*.js
      - ddterm/shell/*.js
    excludedFiles:
      - ddterm/pref/util.conf.js
    parserOptions:
      sourceType: script
